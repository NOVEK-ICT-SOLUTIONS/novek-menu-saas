{
  "name": "qr-menu-saas",
  "version": "1.0.0",
  "description": "QR Code Menu SaaS - TypeScript Monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:*\"",
    "dev:backend": "npm run dev -w backend",
    "dev:frontend": "npm run dev -w frontend",
    "build": "npm run build --workspaces",
    "type-check": "npm run type-check --workspaces",
    "lint": "biome check --max-diagnostics=none",
    "lint:ci": "biome ci --max-diagnostics=none",
    "lint:fix": "biome check --write --max-diagnostics=none",
    "db:migrate": "npm run db:migrate -w backend",
    "db:migrate:dev": "npm run db:migrate:dev -w backend",
    "db:studio": "npm run db:studio -w backend",
    "db:seed": "npm run db:seed -w backend",
    "db:reset": "npm run db:reset -w backend",
    "clean": "npm run clean --workspaces"
  },
  "devDependencies": {
    "concurrently": "latest"
  },
  "author": "",
  "license": "MIT"
}
